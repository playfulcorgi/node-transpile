---
parser: babel-eslint

extends: eslint-config-airbnb

plugins:
  - react
  - import

globals:
  window: true
  describe: true
  expect: true
  test: true
  jest: true

env:
  browser: true
  node: true

rules:
  no-undef: 2
  no-unused-vars: 0
  no-shadow: 0
  indent: [1,2,{ SwitchCase: 1, VariableDeclarator: 2 }] // Code editors have extensions that can group spaces into tabs for convenient navigation through code by the developer.
  no-tabs: 0
  quote-props: 0
  quotes: 0
  react/jsx-indent: 0
  react/jsx-indent-props: 0
  id-length: [1,{ min: 2, exceptions: [_, e, i, k, v] }]
  semi: [1, never]
  comma-style: [1, last]
  comma-dangle: [1, never]
  object-curly-newline: 0
  object-curly-spacing: 1
  prefer-destructuring: 0
  global-require: 1
  no-console: 0
  prefer-template: 1
  function-paren-newline: 0
  no-mixed-operators: 1
  max-len: [1,150,2]
  arrow-parens: 0
  no-return-assign: 0
  no-else-return: 1
  arrow-body-style: 0
  class-methods-use-this: 0
  import/prefer-default-export: 0
  import/first: 1
  import/extensions: 0
  import/no-extraneous-dependencies: 0
  import/no-unresolved: 0 # same as previous
  impot/export: 0
  import/no-named-as-default: 0
  import/no-named-as-default-member: 0
  import/no-duplicates: 0 // Ok as rule but doesn't work correctly.
  import/newline-after-import: 0
  jsx-quotes: [1, prefer-double]
  jsx-a11y/click-events-have-key-events: 0
  jsx-a11y/anchor-is-valid: 0
  react/display-name: 0
  react/jsx-boolean-value: 0
  react/jsx-curly-spacing: [1, never]
  react/jsx-no-duplicate-props: [2,{ ignoreCase: true }]
  react/jsx-no-undef: 2
  react/jsx-sort-prop-types: 0
  react/jsx-sort-props: 0
  react/jsx-uses-react: 2
  react/jsx-uses-vars: 2
  react/no-danger: 0
  react/no-did-mount-set-state: 1
  react/no-did-update-set-state: 0
  react/no-multi-comp: 2
  react/no-unknown-property: 2
  react/prop-types: 2
  react/react-in-jsx-scope: 2
  react/jsx-filename-extension: [1,{ extensions: [.js, .jsx] }]
  react/self-closing-comp: 2
  react/sort-comp: 0
  react/jsx-wrap-multilines: 2
  react/prefer-stateless-function: 0
  react/jsx-max-props-per-line: 1
  react/forbid-prop-types: 0
  react/require-default-props: 1
  react/jsx-closing-tag-location: 0